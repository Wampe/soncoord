                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[3].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        Minimum="{Binding Path=MinimumGain}" 
                        Maximum="{Binding Path=MaximumGain}" 
                        Value="{Binding Path=SelectedOutputSettings.EqualizerBands[4].Gain, Mode=TwoWay}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[4].Gain}"/>
                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[4].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        Minimum="{Binding Path=MinimumGain}" 
                        Maximum="{Binding Path=MaximumGain}" 
                        Value="{Binding Path=SelectedOutputSettings.EqualizerBands[5].Gain, Mode=TwoWay}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[5].Gain}"/>
                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[5].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        Minimum="{Binding Path=MinimumGain}" 
                        Maximum="{Binding Path=MaximumGain}" 
                        Value="{Binding Path=SelectedOutputSettings.EqualizerBands[6].Gain, Mode=TwoWay}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[6].Gain}"/>
                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[6].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        Minimum="{Binding Path=MinimumGain}" 
                        Maximum="{Binding Path=MaximumGain}" 
                        Value="{Binding Path=SelectedOutputSettings.EqualizerBands[7].Gain, Mode=TwoWay}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[7].Gain}"/>
                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[7].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        Minimum="{Binding Path=MinimumGain}" 
                        Maximum="{Binding Path=MaximumGain}" 
                        Value="{Binding Path=SelectedOutputSettings.EqualizerBands[8].Gain, Mode=TwoWay}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[8].Gain}"/>
                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[8].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider Orientation="Vertical"
                        HorizontalAlignment="Center" 
                        Minimum="{Binding Path=MinimumGain}" 
                        Maximum="{Binding Path=MaximumGain}" 
                        Value="{Binding Path=SelectedOutputSettings.EqualizerBands[9].Gain, Mode=TwoWay}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[9].Gain}"/>
                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Center" 
                           Text="{Binding Path=SelectedOutputSettings.EqualizerBands[9].Frequency, StringFormat={}{0} Hz}"/>
            </Grid>
        </UniformGrid>

        <Button Grid.Row="3"
                Content="Save"
                Command="{Binding Path=SaveSettings}" />

    </Grid>
</UserControl>
